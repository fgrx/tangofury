doctype html
html
  include includes/head.pug
  body
    include includes/menu.pug

    section.section
      div.container.padding
        section.header
          .is-centered
            img(src="/img/tangofury-inline.png")
            h1.title= title

        if topMaestros.length > 0 
          section.bloc
            h2.title.is-2= "Favorites maestros activity"
            div.columns.maestros.is-multiline.is-mobile
              each itemMaestro,index in topMaestros
                if itemMaestro.videosToday > 0
                  include includes/itemMaestro.pug

        section.bloc
          h2.title.is-2= "Top tango videos"

          div.videosList.columns.is-multiline.is-mobile
              each itemVideo,index in topVideos
                include includes/itemVideo.pug

          p.is-centered
            a.button.is-medium(href="/top-tango-videos/0")= "See all top videos"

        section.bloc
          h2.title.is-2= "Tango Selections"

          div.columns.selectionList.is-multiline.is-mobile
            each itemSelection,index in selections
              include includes/itemSelection.pug
          p.is-centered
            a.button.is-medium(href="/selections")= "See all selections"
        

    include includes/footer.pug